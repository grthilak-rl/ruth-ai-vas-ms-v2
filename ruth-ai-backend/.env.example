# Ruth AI Backend Environment Configuration
# Copy this file to .env and fill in the values

# ===== Application =====
RUTH_AI_ENV=development
RUTH_AI_LOG_LEVEL=info
RUTH_AI_LOG_FORMAT=json

# ===== Server =====
HOST=0.0.0.0
PORT=8080

# ===== Database =====
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://ruth:ruth@localhost:5432/ruth_ai
DATABASE_POOL_SIZE=10
DATABASE_POOL_OVERFLOW=5

# ===== Redis =====
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ===== AI Runtime (Fall Detection) =====
AI_RUNTIME_URL=http://fall-detection-model:8000
AI_RUNTIME_TIMEOUT_MS=5000
AI_RUNTIME_RETRY_COUNT=3

# ===== PPE Detection Service =====
PPE_DETECTION_URL=http://ppe-detection-model:8000
PPE_DETECTION_TIMEOUT_MS=10000
PPE_DETECTION_RETRY_COUNT=3

# ===== VAS Integration =====
VAS_BASE_URL=http://10.30.250.245:8085
VAS_CLIENT_ID=ruth-ai-backend
VAS_CLIENT_SECRET=changeme
VAS_TOKEN_REFRESH_MARGIN_SEC=300

# ===== JWT Authentication =====
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_STRONG_RANDOM_KEY
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60
